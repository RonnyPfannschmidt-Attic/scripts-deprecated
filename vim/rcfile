set nocompatible " get out of horrible vi-compatible mode
set title
set hidden " allow unwritten buffers in background

colorscheme darkblue
set backspace=indent,eol,start

syntax on " syntax highlighting on
filetype on " detect the type of file
filetype plugin on
filetype indent on

set history=1000 " How many lines of history to remember
set cmdheight=2 " the command bar is 2 high
set scrolloff=3

set enc=utf-8
set fenc=utf-8
set termencoding=utf-8

" no swap files
set nobackup
set noswapfile

runtime macros/matchit.vim
set showmatch " show matching brackets
set hlsearch " do highlight searched for phrases
set incsearch " do highlight as you type you search phrase
set ignorecase
set smartcase

set shortmess=atI
set visualbell

set wildmenu
set wildmode=list:longest

set ruler
set modeline
set mouse=a


set ai " autoindent
"set si " smartindent 
set cindent " do c-style indenting
set tabstop=4 " tab spacing (settings below are just to unify it)
set softtabstop=4 " unify
set shiftwidth=4 " unify
set expandtab " real pacesplease!

set list listchars=tab:>-,trail:.,extends:>

set pastetoggle=<F9>

autocmd FileType python set omnifunc=pythoncomplete#Complete sw=4 sts=4 ts=4 expandtab
autocmd FileType javascript set omnifunc=javascriptcomplete#CompleteJS
autocmd FileType html set omnifunc=htmlcomplete#CompleteTags
autocmd FileType css set omnifunc=csscomplete#CompleteCSS
autocmd FileType xml set omnifunc=xmlcomplete#CompleteTags
autocmd FileType php set omnifunc=phpcomplete#CompletePHP
autocmd FileType c set omnifunc=ccomplete#Complete

au BufEnter */scripte/rcfiles/vim set ft=vim
au BufEnter,BufNewFile,BufRead *.css set sw=2 sts=2 ts=2 expandtab
au BufEnter,BufNewFile,BufRead *.py set sw=4 sts=4 ts=4 expandtab
au BufEnter,BufNewFile,BufRead *.html set sw=2 sts=2 ts=2 expandtab
au BufEnter,BufNewFile,BufRead *.ui set sw=2 sts=2 ts=2 expandtab
au BufEnter,BufNewFile,BufRead *.glade set sw=2 sts=2 ts=2 expandtab
au BufEnter,BufNewFile,BufRead *templates/*.html set filetype=htmldjango sw=2 sts=2 ts=2 expandtab
au BufEnter,BufNewFile,BufRead *.jinja set filetype=htmldjango sw=2 sts=2 ts=2 expandtab
au BufEnter,BufNewFile,BufRead *.rst* set filetype=rest sw=2 sts=2 ts=2 expandtab
au BufEnter,BufNewFile,BufRead *.vel set filetype=vellum sw=4 sts=4 ts=4 expandtab

au BufRead,BufNewFile *.vala            set filetype=vala
au BufRead,BufNewFile *.vapi            set filetype=vala

au FileType c set noexpandtab


alias mq='hg -R $(hg root)/.hg/patches $*'
alias ls="ls --color=auto"

SUDO_ALIASES=(
    emerge
    halt
    reboot
    pm{erge,aint}
    etc-update
    modprobe insmod rmmod
    iw{list,priv}
    i{f,w}config
    ip
    eix-{sync,update}
    wpa_cli
    unicode_start
    apt-get
)

for com in ${SUDO_ALIASES[@]}
do
    alias $com="sudo $com"
done


alias layman="sudo env -i /usr/bin/layman"

